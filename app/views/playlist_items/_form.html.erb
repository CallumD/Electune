<div id="addSongModal" class="modal hide fade">
  <div class="modal-header">
  <h3>Search spotify</h3>
  </div>
  <div class="modal-body">
  <%= form_tag(search_path, remote: true, id: 'search_form', class: 'form-inline') do |f| %>
  <%= hidden_field_tag "playlist_id", @playlist._id %>
  <%= label_tag :search, "By name:" %>
  <%= text_field_tag :search, nil, placeholder: "song name" %>
  <%= label_tag :artist, "or by artist:" %>
  <%= text_field_tag :artist, nil, placeholder: "artist name" %>
  <%= submit_tag 'search', :class => 'btn search_button' %>
  <% end %>
  <div id="results_table">
  </div>
  <div class="modal-footer">
  <a data-dismiss="modal" class="btn">Close</a>
  </div>
</div>
