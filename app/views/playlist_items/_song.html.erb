<tr>
  <td><%= link_to "add song", playlist_playlist_items_path(playlist_id: @playlist,target: "#{@playlist.name}_table", id: song.id), method: 'post', remote: true %></td>
  <td><%= truncate(song.name , :length => 40, :omission => '...') %></td>
  <td><%= seconds_to_mins song.length %></td>
  <td><a href="<%= song.spotify_link %>">play song</a></td>
  <td><%= link_to song.album.name, album_lookup_path(playlist_id: @playlist.id, spotify_link: song.album.spotify_link), remote: true %></td>
  <td><%= link_to song.artists.first.name, artist_lookup_path(playlist_id: @playlist.id, spotify_link: song.artists.first.spotify_link), remote: true %></td>
</tr>
