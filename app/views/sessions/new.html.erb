<% title "Sign in" %>
<h1>Sign in</h1>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
